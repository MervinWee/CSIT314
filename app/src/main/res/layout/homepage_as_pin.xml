<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Logo" />

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/logo"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Menu" />


            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Profile" />

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/profile_icon"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_notification_overlay"
                android:layout_centerVertical="true"
                android:contentDescription="Notifications"/>
        </RelativeLayout>


        <!-- Title and Create Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Alex! Your Request"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btn_create_new_request"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Create New Request"
                android:textSize="12sp"
                android:backgroundTint="#4A90E2"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Status Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_active_requests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Active Requests (3)"
                app:cornerRadius="8dp"
                android:backgroundTint="#E57373"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_shortlisted_interests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shortlisted Interests (5)"
                app:cornerRadius="8dp"
                android:backgroundTint="#81C784"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_completed_matches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="8dp"
                android:text="Completed Matches"
                android:backgroundTint="#64B5F6"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Active Requests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Request Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/medical_transport_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical Transport"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/open_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textColor="@android:color/white"
                    android:background="#81C784"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/medical_transport_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need for WheelChair Ramp"
                    android:layout_below="@id/medical_transport_title" />

                <TextView
                    android:id="@+id/posted_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted 12 days ago"
                    android:layout_below="@id/medical_transport_subtitle"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/high_urgency_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Urgency"
                    android:textColor="@android:color/white"
                    android:background="#E57373"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_below="@id/posted_date1"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:id="@+id/stats_layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/open_status"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Views: 15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FA Service Type"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sask"/>
                </LinearLayout>

                <Button
                    android:id="@+id/view_details_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/stats_layout_1"
                    android:layout_marginTop="8dp"
                    android:text="View Details"/>

                 <TextView
                    android:id="@+id/edit_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#4A90E2"
                    android:layout_toStartOf="@id/view_details_button_1"
                    android:layout_alignBottom="@id/view_details_button_1"
                     android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Request Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/grocery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grocery Shopping Help"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/high_urgency_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Urgency"
                    android:textColor="@android:color/white"
                    android:background="#E57373"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/grocery_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="offer assistance"
                    android:layout_below="@id/grocery_title" />

                <TextView
                    android:id="@+id/posted_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted 12 days ago"
                    android:layout_below="@id/grocery_subtitle"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/high_urgency_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Urgency"
                    android:textColor="@android:color/white"
                    android:background="#E57373"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_below="@id/posted_date2"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:id="@+id/stats_layout_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/high_urgency_2"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Views: 15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shortlisted: 3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress: 3"/>
                </LinearLayout>

                <Button
                    android:id="@+id/view_details_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/stats_layout_2"
                    android:layout_marginTop="8dp"
                    android:text="View Details"/>

                <TextView
                    android:id="@+id/cancel_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#4A90E2"
                    android:layout_toStartOf="@id/view_details_button_2"
                    android:layout_alignBottom="@id/view_details_button_2"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Request Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/prescription_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescription Pickup"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/high_urgency_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Urgency"
                    android:textColor="@android:color/white"
                    android:background="#E57373"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/prescription_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wooly Pharmacy run"
                    android:layout_below="@id/prescription_title" />

                <TextView
                    android:id="@+id/posted_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted 13 days ago"
                    android:layout_below="@id/prescription_subtitle"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/high_urgency_3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Urgency"
                    android:textColor="@android:color/white"
                    android:background="#E57373"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_below="@id/posted_date3"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:id="@+id/stats_layout_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/high_urgency_3"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Views: 2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shortlisted: 0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress: 1"/>
                </LinearLayout>

                <Button
                    android:id="@+id/view_details_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/stats_layout_3"
                    android:layout_marginTop="8dp"
                    android:text="View Details"/>

                <TextView
                    android:id="@+id/cancel_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#4A90E2"
                    android:layout_toStartOf="@id/view_details_button_3"
                    android:layout_alignBottom="@id/view_details_button_3"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>