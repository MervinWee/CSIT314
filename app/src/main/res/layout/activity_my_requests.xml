<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".MyRequestsActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar_my_requests"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="My Help Requests"
            app:menu="@menu/my_requests_menu" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Use a FrameLayout to easily overlay the ProgressBar on top of other views -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RecyclerView to display the list of requests -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_my_requests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:visibility="gone"
            tools:listitem="@layout/item_help_request" /> <!-- Make sure item_help_request.xml exists -->

        <!-- Text to show when the list is empty -->
        <TextView
            android:id="@+id/tv_no_requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No help requests found."
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="gone" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar_my_requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" /> <!-- Initially visible -->

    </FrameLayout>
</LinearLayout>
