<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back to user profile"
        android:src="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Alex Johnson"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Alex Johnson"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="alex.m@email.com" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profile_header"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/account_roles_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Account &amp; Roles" />

    <TextView
        android:id="@+id/user_role_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_roles_title"
        android:layout_marginTop="16dp"
        android:text="User Role" />

    <EditText
        android:id="@+id/user_role_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_role_label"
        android:layout_alignParentEnd="true"
        android:text="Requester"
        android:inputType="text" />

    <EditText
        android:id="@+id/tags_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_role_edittext"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:hint="Search" />

    <TextView
        android:id="@+id/tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tags_search"
        android:layout_alignParentStart="true"
        android:text="Tags" />

    <EditText
        android:id="@+id/about_me_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tags_search"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:hint="Search" />

    <TextView
        android:id="@+id/about_me_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/about_me_search"
        android:layout_alignParentStart="true"
        android:text="About me" />

</RelativeLayout>