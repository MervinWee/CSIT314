<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boundary.HelpRequestDetailActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Request Details"
            app:menu="@menu/detail_menu"  />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Request Title -->
            <TextView
                android:id="@+id/tvDetailRequestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Medical Transport" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#1976D2"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@android:color/white"
                tools:text="Open" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#CCCCCC" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Need a ride to the hospital for a check-up."/>

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDetailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Singapore General Hospital (SGH)"/>

            <!-- Preferred Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Preferred Time"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDetailPreferredTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Wed, Nov 12, 2025 at 3:25 PM"/>

            <!-- Urgency -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Urgency"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDetailUrgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Medium"/>

            <!-- ** THE FIX IS HERE: Changed LinearLayout to MaterialCardView ** -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutPinContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardElevation="4dp"
                app:contentPadding="16dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Person-in-Need Details"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold" />

                    <!-- PIN Name -->
                    <TextView
                        android:id="@+id/tvDetailPinName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@android:drawable/ic_menu_myplaces"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        tools:text="John Doe" />

                    <!-- PIN Phone Number -->
                    <TextView
                        android:id="@+id/tvDetailPinPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@android:drawable/ic_menu_call"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        tools:text="+65 9123 4567" />

                    <!-- PIN ID -->
                    <TextView
                        android:id="@+id/tvDetailPinId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        tools:text="PIN ID: 1234" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- View Count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye"
                    app:tint="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/tvDetailViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="12" />
            </LinearLayout>

            <!-- Shortlist Count -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Shortlisted by"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDetailShortlistCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="3 companies"/>

            <!-- Posted Date -->
            <TextView
                android:id="@+id/tvDetailPostedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="12sp"
                tools:text="Posted on: 02 November 2025 at 06:26 PM GMT"/>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnAcceptRequest"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Accept Request"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnCompleteRequest"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Mark as Complete"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnCancelRequest"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cancel This Request"
                app:strokeColor="@android:color/holo_red_dark"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
